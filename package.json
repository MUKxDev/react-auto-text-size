{
  "name": "auto-text-size",
  "description": "Make text fit container, prevent overflow and underflow.",
  "version": "0.2.1",
  "license": "MIT",
  "homepage": "https://github.com/sanalabs/auto-text-size#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanalabs/auto-text-size.git"
  },
  "author": "Viktor Qvarfordt",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "src/**/*",
    "dist/**/*.js",
    "dist/**/*.mjs",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.mts",
    "dist/**/*.d.ts.map"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc && tsc --project tsconfig.cjs.json && find dist/esm/ -name \"*.js\" -execdir bash -c 'mv \"$1\" \"${1%.js}.mjs\"' - '{}' \\; && mv ./dist/esm/index.d.ts ./dist/esm/index.d.mts",
    "watch": "tsc-watch --onSuccess \"yalc push\""
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/node": "18.0.3",
    "@types/react": "18.0.15",
    "tsc-watch": "^5.0.3",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@3.2.1"
}
